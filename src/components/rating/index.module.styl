.dots
  display: flex

  .dot
    margin: 0 5px
    padding: 1px
    border: 2px solid var(--gray5)
    border-radius 50%

    .value
      position: relative
      width: 10px
      height: 10px
      border-radius 50%
      overflow: hidden

      .fill
        position: absolute
        top: 0
        left: 0
        bottom: 0
        background: var(--gray10)


@media print
  .dots
    .dot
      border: 2px solid var(--gray6)

      .value
        .fill
          background: var(--gray3)
