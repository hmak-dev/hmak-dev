.button
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  background: none
  font: inherit
  color: inherit
  border: 2px solid var(--primary-color)
  height: 50px
  padding: 0 30px
  border-radius 10px
  font-size: 18px
  cursor: pointer
  outline none

  &:hover
    background: rgba(white, 0.02)
