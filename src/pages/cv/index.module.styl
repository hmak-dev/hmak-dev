.cvPage
  display: flex

  .cv
    display: flex
    flex-direction: column
    overflow: hidden

    .header
      display: flex
      justify-content: space-between

      .info
        display: flex
        flex-direction: column
        align-items: flex-start
        color var(--gray12)

        .name
          line-height: 1
          font-size: 3.5em
          font-weight: 300
          display: flex
          flex-direction: column
          margin-left: 19px

          .lastname
            font-weight: 700

        .jobTitle
          padding: 8px 20px
          background: var(--primary-color)
          color: var(--gray12)
          text-shadow 1px 1px 5px rgba(black, .3)
          margin-top: 10px
          text-transform uppercase
          letter-spacing 6px
          font-size: .9em
          font-weight: 500
          line-height: 1
          position: relative

          &::before
            content: ''
            display: block
            height: 2px
            background: var(--primary-color)
            position: absolute
            left: 100%
            bottom: 0
            width: 100vw


    section
      position: relative

      &:not(:first-child)
        margin-top: 30px

      > *:not(header)
        padding-left: 52px

      header
        display: flex
        align-items: center
        margin-bottom: 10px
        height: 40px

        h2
          color var(--gray12)
          text-transform uppercase
          font-weight: 700
          font-size: 2em

        svg
          width: 30px
          height: 30px
          margin-right: 20px
          margin-left: 1px
          color: var(--gray6)

      article
        display: flex
        flex-direction: column
        position: relative

        &:not(:last-child)
          padding-bottom: 20px

        &::before
          content: ''
          display: block
          width: 10px
          height: 10px
          border: 2px solid var(--primary-color)
          border-radius 50%
          position: absolute
          top: 4px
          left: 16px
          transform translateX(-50%)

        &::after
          content: ''
          display: block
          width: 0
          border 1px solid var(--gray2)
          border-radius 1px
          position: absolute
          top: 26px
          left: 16px
          margin-left: -1px
          bottom: 4px

        &:last-child::after
          display: none

      h5
        text-transform uppercase
        letter-spacing 1px
        font-size: .9em
        color: var(--gray6)
        font-weight: 500

        sup
          vertical-align top
          color: var(--gray8)
          font-weight: 700
          font-size: .75em

      h4
        font-size: 1em
        line-height: 1
        color: var(--gray8)
        font-weight: 500

      h3
        font-size: 1.4em
        font-weight: 500

      p, ul
        color: var(--gray9)

      &.work
        ul
          list-style-type disc
          padding-left 40px

    .wrapper
      display: flex

      > main
        display: flex
        flex-direction: column
        padding: 40px 20px

      > aside
        display: flex
        flex-direction: column
        width: 500px
        padding: 40px 20px

        .skills
          ul
            li
              display: flex
              align-items: center
              justify-content: space-between
              color var(--gray11)

              > span
                height: 1px
                background: var(--gray3)
                flex-grow: 1
                margin: 0 20px

        .contacts, .socials
          .links
            .link
              a
                display: flex
                align-items: center
                margin-left: -10px
                padding: 4px 10px
                text-decoration none
                font-size: 1.05em

                svg
                  width: 16px
                  height: 16px
                  margin-right: 10px
                  fill: var(--gray-12)

@media print
  body
    background: none
    color var(--gray1)

  :global(#gatsby-focus-wrapper)
    > header
      display: none !important

  .cvPage
    .cv
      .wrapper
        > main, > aside
          padding-bottom: 0

        > aside
          width: 420px

          .skills
            ul
              li
                color var(--gray2)

                > span
                  background: var(--gray10)

      .header
        .info
          color var(--gray1)

      section
        header
          h2
            color var(--gray1)
            font-size: 1.7em

        article
          &::after
            border-color: var(--gray10)

        h5
          font-size: .75em
          color: var(--gray6)

          sup
            color: var(--gray5)

        h4
          font-size: .83em
          line-height: 1
          color: var(--gray5)

        h3
          font-size: 1.17em

        p, ul
          color: var(--gray4)

@page
  margin: 10mm
