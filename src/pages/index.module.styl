.homePage
  display: flex
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  cursor none

  .cursor
    position: fixed
    width: 0
    height: 0
    border: 1px solid var(--gray3)
    border-radius 50%
    z-index: 10
    transform translate(-50%, -50%)
    pointer-events none


  :global(.container)
    display: grid
    grid-template-areas: "inf pic"\
    "fut pic"
    grid-template-rows auto 64px
    grid-template-columns 1fr auto

    .me
      grid-area pic

    .info
      grid-area inf
      display: flex
      flex-direction: column
      align-items: flex-start
      margin-top: 24vh

      .hi
        font-size: 2em
        line-height: 1

      .name
        font-size: 7em
        font-weight: 700
        line-height: 1
        margin-left: -0.05em

      .jobTitle
        color: var(--gray6)
        text-transform uppercase
        font-size: 1.25em
        letter-spacing 1.05em
        margin-left: 0.15em

      a
        margin-top: 30px

    footer
      grid-area fut

      .socials
        display: flex
        position: relative
        font-size: 0.9em
        transform translateX(-20px)

        .social
          a
            display: block
            text-decoration none
            padding: 20px
            text-transform uppercase
            color: var(--gray5)
            transition color .3s

            &:hover
              color: var(--gray12)


@media only screen and (max-width: 1200px)
  .homePage
    :global(.container)
      padding: 0
      grid-template-areas: "inf"\
      "pic"\
      "fut"
      grid-template-rows auto auto auto
      grid-template-columns auto

      .info
        margin-top: 100px
        place-self center

      .me
        place-self center

      footer
        border-top 1px solid var(--gray3)

        .socials
          justify-content: center
          transform translateX(0)



@media only screen and (max-width: 700px)
  .homePage
    :global(.container)
      .info
        font-size: .8em

      footer
        .socials
          flex-wrap: wrap

          .social
            width: 50%
            display: flex

            a
              flex-grow: 1
              text-align: center



@media only screen and (max-width: 500px)
  .homePage
    :global(.container)
      .info
        margin-top: 50px
        font-size: .65em
