@import "./variables.styl"
@import "./typography.styl"
@import "./resets.styl"

html
  height 100%

body
  min-height 100%
  padding 0
  margin: 0
  background: var(--gray1)
  color: var(--gray12)
  display: flex

#___gatsby
  display: flex
  flex-grow: 1

#gatsby-focus-wrapper
  display: flex
  flex-direction: column
  flex-grow: 1

  > main
    flex-grow: 1

:global(.container)
  width: 1400px
  margin: 0 auto
  box-sizing: border-box

@media only screen and (max-width: 1500px) {
  :global(.container) {
    width: 1100px
  }
}

@media only screen and (max-width: 1200px) {
  :global(.container) {
    width: 800px
  }
}

@media only screen and (max-width: 900px) {
  :global(.container) {
    width: 100%
    padding: 0 40px
  }
}