.header
  position: relative
  z-index: 10

  > :global(.container)
    display: flex
    align-items: center
    justify-content: space-between
    padding: 30px 0

    .logo
      z-index: 1
      position: relative
      margin-left: -5px

    .burger
      width: 48px
      height: 48px
      position: relative
      z-index: 1
      -webkit-appearance: none
      -moz-appearance: none
      appearance: none
      background: none
      outline none
      border none
      cursor: pointer
      margin-right: -10px

      &::before, &::after
        content: ''
        display: block
        width: 28px
        height: 2px
        background: var(--gray12)
        position: absolute
        top: 50%
        left: 50%
        transition transform .3s ease-in-out

      &::before
        transform: translate3d(-50%, -7px, 0) rotateZ(0deg)

      &::after
        transform: translate3d(-50%, 7px, 0) rotateZ(0deg)

      &:not(.open):hover
        &::before
          transform: translate3d(-50%, -7px, 0) rotateZ(-5deg)

        &::after
          transform: translate3d(-50%, 7px, 0) rotateZ(5deg)

      &.open
        &::before
          transform: translate3d(-50%, 0, 0) rotateZ(-45deg)

        &::after
          transform: translate3d(-50%, 0, 0) rotateZ(45deg)

        &:hover
          &::before
            transform: translate3d(-50%, 0, 0) rotateZ(-40deg)

          &::after
            transform: translate3d(-50%, 0, 0) rotateZ(40deg)
